<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
<title>Locker Opened</title>

<style>
:root{
  --orange:#ff7b00;
  --orange-dark:#e56e00;
  --black:#111;
  --gray:#666;
  --bg:#ffffff;
}

html, body{
  height:100%;
  margin:0;
  overflow:hidden;          /* üö´ no scroll */
  user-select:none;
  touch-action:manipulation;
}

body{
  background:var(--bg);
  font-family:system-ui,-apple-system,Segoe UI,Roboto;
  color:var(--black);
}

/* ‚è± TOP BAR */
.timer-bar{
  position:fixed;
  top:0;
  left:0;
  right:0;
  height:56px;
  background:#fff7ed;
  border-bottom:2px solid #ffe1c4;
  display:flex;
  align-items:center;
  justify-content:center;
  font-weight:800;
  font-size:1.1rem;
  z-index:1000;
}

.timer-bar span{
  color:var(--orange-dark);
  margin-left:6px;
}

/* üß± MAIN WRAPPER */
.wrapper{
  height:100%;
  padding-top:56px;
  display:flex;
  align-items:center;
  justify-content:center;
}

/* üì¶ LANDSCAPE CARD */
.card{
  width:100%;
  max-width:900px;
  height:calc(100% - 56px);
  padding:24px;
  display:grid;
  grid-template-columns: 1.2fr 1fr; /* text | QR */
  gap:28px;
  align-items:center;
}

/* LEFT SIDE */
.left{
  display:flex;
  flex-direction:column;
  justify-content:center;
}

h2{
  font-size:2rem;
  margin:0 0 8px;
  font-weight:900;
}

p{
  margin:0 0 6px;
  font-size:1.1rem;
  color:var(--gray);
}

/* ACCESS CODE */
.access-code{
  margin:16px 0;
  font-size:3.4rem;
  letter-spacing:10px;
  font-weight:900;
  background:linear-gradient(90deg, rgba(255,123,0,.12), rgba(255,181,107,.05));
  padding:18px 26px;
  border-radius:18px;
  border:2px dashed rgba(0,0,0,.15);
  display:inline-block;
}

/* RIGHT SIDE */
.right{
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:center;
}

.qr{
  width:260px;
  height:260px;
  border-radius:16px;
  border:1px solid #eee;
  box-shadow:0 12px 30px rgba(0,0,0,.12);
}

/* HINT */
.hint{
  margin-top:14px;
  padding:12px 14px;
  font-size:1rem;
  background:#fff7ed;
  border:1px solid #ffe1c4;
  border-radius:12px;
  display:flex;
  gap:10px;
  align-items:flex-start;
}

/* BUTTON */
.btn{
  margin-top:18px;
  padding:1rem 1.2rem;
  font-size:1.2rem;
  font-weight:900;
  border-radius:16px;
  border:none;
  width:100%;
  background:var(--orange);
  color:#fff;
}

.btn:active{
  background:var(--orange-dark);
}

/* SMALL SCREENS (still landscape) */
@media (max-height: 500px){
  .access-code{
    font-size:2.8rem;
    letter-spacing:6px;
  }
  .qr{
    width:220px;
    height:220px;
  }
}
</style>
</head>

<body>

<!-- ‚è± TIMER -->
<div class="timer-bar">
  Returning to home in <span id="timer">15</span>s
</div>

<div class="wrapper">
  <main class="card">

    <!-- LEFT -->
    <section class="left">
      <h2>Locker Opened</h2>
      <p>Place your baggage inside the locker</p>
      <p><b>Use this access code during pickup</b></p>

      <div class="access-code"><%= accessCode %></div>

      <form action="/" method="get">
        <button class="btn">Go Home</button>
      </form>
    </section>

    <!-- RIGHT -->
    <section class="right">
      <img class="qr" src="<%= qrImage %>" alt="Pickup QR Code" />

      <div class="hint">
        üì∑
        <div>
          <b>Save this QR or take a photo.</b><br/>
          Required for parcel pickup.
        </div>
      </div>
    </section>

  </main>
</div>

<script>
(function(){
  let seconds = 15;
  const timer = document.getElementById("timer");

  const interval = setInterval(()=>{
    seconds--;
    timer.textContent = seconds;
    if(seconds <= 0){
      clearInterval(interval);
      location.href="/";
    }
  },1000);
})();
</script>

</body>
</html>
