  <script>
    (() => {
      const splash = document.getElementById('lock-splash');

      const receiveBtn = document.getElementById('receiveBtn');
      const sendBtn = document.getElementById('sendBtn');
      const storeBtn = document.getElementById('storeBtn');

      function setEnabled(enabled) {
        [receiveBtn, sendBtn, storeBtn].forEach(b => {
          b.disabled = !enabled;
          b.style.opacity = enabled ? '1' : '.6';
        });
      }

      async function checkLocks() {
        try {
          const res = await fetch('/api/lockers/all-locked');
          const data = await res.json();

          if (data.allLocked) {
            splash.classList.remove('show');
            setEnabled(true);
          } else {
            splash.classList.add('show');
            setEnabled(false);
            setTimeout(checkLocks, 1000);
          }
        } catch {
          splash.classList.add('show');
          setEnabled(false);
          setTimeout(checkLocks, 1500);
        }
      }

      checkLocks();

      receiveBtn.onclick = () => location.href = '/pickup';
      sendBtn.onclick = () => location.href = '/dropoff';
      storeBtn.onclick = () => location.href = '/terminal/phone';

    })();
  </script>

</body>

</html>