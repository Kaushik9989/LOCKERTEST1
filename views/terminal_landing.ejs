  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 18px;
  padding: 24px;
}


    .panel.receive {
      background: 
     #ffffff;
    }

    .panel.send {
      background: 
       #ffffff;
    }

    .panel.store {
      
      background:  #5C7EA1;
      background:  #ffffff;
    }
.terminal-btn {
  width: min(90%, 420px);
  height: min(48vh, 280px); /* ðŸ‘ˆ reduced */
  border-radius: 22px;
  border: none;
  font-size: clamp(22px, 4vw, 40px);
  font-weight: 800;
  letter-spacing: .05em;
  cursor: pointer;
  box-shadow: 0 12px 28px rgba(0, 0, 0, .2);
  animation: heartbeat 1s ease-in-out infinite;
}



    .terminal-btn:hover {
      transform: translateY(-2px);
    }

    .receive-btn {
      background: #F47C2C;
      color: #fff;
    }

    .send-btn {
      background: #F47C2C;
      color: #ffffff;
    }

    .store-btn {
      background:#F47C2C;
      color: #ffffff;
      
    }

.label {
  font-family: "Inter", system-ui, -apple-system, sans-serif;
  font-size: 18px;
  font-weight: 600;
  letter-spacing: 0.14em;
  text-transform: uppercase;

  color: rgba(0, 0, 0, 0.85);
}


    /* Splash */
    #lock-splash {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, .55);
      backdrop-filter: blur(3px);
      display: none;
      place-items: center;
      z-index: 999;
    }

    #lock-splash.show {
      display: grid;
    }

    .lock-card {
      background: #111;
      color: #fff;
      padding: 24px;
      border-radius: 18px;
      text-align: center;
      width: min(90%, 480px);
    }

    .lock-spinner {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      border: 4px solid #ddd;
      border-top-color: #fff;
      animation: spin .9s linear infinite;
      margin: 12px auto;
    }

    @keyframes spin {
      to {
        transform: rotate(360deg);
      }
    }
    @keyframes heartbeat {
  0%   { transform: scale(1); }
  10%  { transform: scale(1.03); }
  20%  { transform: scale(1); }
  30%  { transform: scale(1.03); }
  40%  { transform: scale(1); }
  100% { transform: scale(1); }
}

/* Apply heartbeat */
.heartbeat {
  animation: heartbeat 1.6s ease-in-out infinite;
}

  </style>
</head>

<body>

  <!-- Logo -->
  <div class="logo-wrap">
    <img src="/images/droppointlogo.png" class="logo" />
  </div>

  <!-- Main UI -->
  <main class="screen">

    <!-- RECEIVE -->
    <section class="panel receive">
      <button class="terminal-btn receive-btn heartbeat" id="receiveBtn">PICKUP</button>
      <div class="label"><b>Pick up</b> your parcel</div>
    </section>

    <!-- SEND -->
    <section class="panel send">
      <button class="terminal-btn send-btn heartbeat" id="sendBtn">SEND</button>
      <div class="label"><b>Dispatch</b> a parcel</div>
    </section>

    <!-- STORE -->
    <section class="panel store">
      <button class="terminal-btn store-btn heartbeat" id="storeBtn">STORE</button>
      <div class="label"><b>Store</b> Luggage </div>
    </section>

  </main>

  <!-- Lock check -->
